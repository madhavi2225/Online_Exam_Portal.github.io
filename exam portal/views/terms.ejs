    <div class="container-fluid">

        <p class="terms">User (or Candidate) must follow these Terms & Conditions : </p>

        <ul class="para">

            <ol type="1">
                <% for(let i=0; i<terms.length; i++){ %>
                    <li>
                        <%= terms[i].terms %>
                    </li>
                    <% } %>
            </ol>
        </ul>

        <p class="con"><input type="checkbox" id="p1" style="margin-left: 100px; cursor: pointer;">I Have Read All
            the Instructions and Accept the Terms & Conditions</p>
        <span id="error"></span>
    </div><br>

    <table>
