    <style>
        * {
            margin-left: 20px;
            margin-right: 20px;
            /* background-color: #42275a; */
            font-family: 'Poppins', sans-serif;
            color: #42275a;
        }

        .container-fluid {
            background-color: #f2f2f2;
            box-sizing: border-box;
            /* background-color: #42275a; */
            border: 2px solid #c4c3ca;
            box-shadow: 13px 13px 20px #55595d, -13px -13px 20px #fff;
            border-radius: 10px;
            margin: 5px;

        }

        .terms {
            color: #42275a;
            font-size: 20px;
        }

        .para {
            margin-left: 50px;
            color: #42275a;
            font-size: 17px;
        }

        .con {
            font-size: 16px;
            color: #42275a;
        }

        .btn {
            border-radius: 4px;
            height: 40px;
            font-family: 'Poppins', sans-serif;
            font-size: 15px;
            font-weight: 600;
            text-align: center;
            cursor: pointer;
            border: none;
            background-color: #c4c3ca;
            color: #42275a;
        }

        .btn:active,
        .btn:focus {
            background-color: rgb(112, 54, 112);
            color: #c4c3ca;
        }

        .btn:hover {
            background-color: rgb(112, 54, 112);
            color: #c4c3ca;
        }

        #sid {
            padding: 3px 3px;
            padding-left: 15px;
            height: 30px;
            width: 43%;
            font-weight: 500;
            border: 2px solid #c4c3ca;
            border-radius: 4px;
            font-size: 16px;
            line-height: 20px;
            letter-spacing: 0.5px;
            outline: none;
            color: black;
            background-color: lightcoral;
        }

        table,
        td,
        tr {
            width: auto;
            color: #42275a;
            border-radius: 12px;
            text-align: center;
        }

        select {
            width: 100%;
            padding: 8px 8px;
            border: 2px solid #c4c3ca;
            border-radius: 4px;
            color: #42275a;
            font-size: 16px;
            cursor: pointer;
        }


        /* result board css */
        li {
            font-size: 20px;
            line-height: 1.5;
        }

        button {
            background-image: linear-gradient(to right, #f2f2f2, #c4c3ca);
            /* background: #4292dc; */
            cursor: pointer;
            border-radius: 25px;
            color: black;
            box-shadow: 0 8px 16px 0 #888888 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }

        h1 {
            font-size: 30px;
            border-style: outset;
            box-shadow: 3px 5px #888888;
            padding-left: 50px;
            padding-right: 50px;
            text-align: center;
            margin-top: 50px;
        }

        .wrapper {
            padding: 5px;
            max-width: 960px;
            width: 95%;
            margin: 20px auto;
        }

        header {
            padding: 0 15px;
            text-align: center;
            font-size: 21px;
        }

        .columns {
            display: flex;
            flex-flow: row wrap;
            justify-content: center;
            margin: 5px 0;
        }

        .column {
            flex: 1;
            /* border: 2px solid purple; */
            border: transparent;
            border-radius: 20px;
            /* box-shadow: 5px 5px 5px 5px rgb(168, 86, 164); */
            box-shadow: 5px 5px 5px 5px rgb(155, 157, 161);
            margin: 2px;
            padding: 10px;
            background: paleturquoise;
        }

        .column:first-child {
            margin-left: 0;
            background: #ECD3E6;
            background-position: fixed;
            background-repeat: no-repeat;
        }

        .column:last-child {
            margin-left: 0;
            background: white;
        }

        @media screen and (max-width:980px) {
            .columns .column {
                margin-bottom: 5px;
                flex-basis: 40%;
            }

            .columns .column:last-child {
                margin: 10%;
                flex-basis: 0;
            }
        }

        @media screen and (max-width:680px) {
            .columns .column {
                margin: 0 0 5px 0;
                flex-basis: 100%;
            }
        }
    </style>
    <!-- <script src="terms.js"></script> -->
</head>

<body>

    <script type="text/javascript" language="javascript">
        $(document).ready(function () {
            $('.btn').click(() => {
                let chec = document.getElementById('p1').checked;
                console.log(chec);
                let ExamValue = $('#exam').val();

                let flag = true;
                if (chec == false) {

                    alert("You must agree to terms and conditions");
                    flag = false;
                }
                else if (ExamValue == '/') {

                    alert("plese select exam type")
                    flag = false;
                } else if (ExamValue == 'html') {

                    $('#termsform').attr('action', '/que1');
                    flag = true;
                } else if (ExamValue == 'css') {

                    $('#termsform').attr('action', '/cssquiz1');
                    flag = true;
                } else if (ExamValue == 'js') {

                    $('#termsform').attr('action', '/javascriptquiz1');
                    flag = true;
                }
                if (flag != false) {

                    alert("Now Exam is Started!!")

                }
                return flag;

            });

        });  
    </script>


